<% provide(:title, 'Lessons') %>

<% if current_user.admin? || current_user.course_creator? %>
	<%= link_to "Create new lesson", new_track_lesson_path, class: "button button-red action-button-top-right" %>
<% end %>
<%= link_to "Back to Track", tracks_path(@course), class: "button button-red action-button-top-right" %>

<h1><%= @track.name %></h1>

<div class="courses-container">
	<ul class="list-group">
		<% @lessons.each do |lesson| %>
			<li class="list-group-item"><%= link_to lesson.name, lesson_path(lesson) %> <%= link_to "edit", edit_lesson_path(lesson), class: "new-academia-action" %></li>
		<% end %>
	</ul>
</div>