<% provide(:title, 'New Tutorial') %>


<%= link_to "Back to Track", lessons_path(@track), class: "button-nav button-nav-green action-button-top-right" %>
<div class="panel panel-default new-academia-panel">
	<div class="panel-heading">
		<h2 class="panel-title">Add New Tutorial to '<%= @track.name %>'</h3>
	</div>
	<div class="panel-body">
		<%= form_for(@tutorial) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-plus"></span></span>
				<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
			</div>

			<%= f.label :order, 'Order of Tutorial in Track' %>
			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-plus"></span></span>
				<%= f.text_field :order, class: "form-control", placeholder: "Order" %>
			</div>

			<%= f.label :content %> <span class="lesson-instructions-helper">(when referencing something in the code, wrap it in <code>&lt;code&gt;&lt;/code&gt;</code> tags's). If you want to write HTML tags within the 'code' tags, you <strong>MUST</strong> write: 
				<ul>
					<li><code><%= '&lt;' %></code> for <code>&lt;</code></li>
					<li><code><%= '&gt;' %></code> for <code>&gt;</code></li>
				</ul>
			</span>
			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-align-left"></span></span>
				<%= f.text_area :content, class: "form-control", placeholder: "The content of the Tutorial goes here", rows: "6" %>
			</div>

			<div class="input-group">
				<%= f.hidden_field :track_id, value: @track.id  %>
			</div>

			<div class="new-academia-action">
				<%= f.submit "Create Tutorial", class: "btn btn-large btn-primary" %>
			</div>
		<% end %>
	</div>
</div>
