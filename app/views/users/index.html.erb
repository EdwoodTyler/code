<% provide(:title, 'All Users') %>

<div class="panel panel-default">
	<div class="panel-heading">All Users <span class="badge"><%= @users.count %></span></div>

	<table class="table table-hover">
		<thead>
			<th>Username</th>
			<th>Name</th>
			<th>Points</th>
			<th>Location</th>
			<th>Email</th>
			<% if current_user.admin? %>
				<th>Edit</th>
				<th>Delete</th>
			<% end %>
		</thead>
		<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= gravatar_for user, size: 30 %> <%= link_to user.username, user %></td>
			<td><%= user.name if user.name %></td>
			<td><%= user.points %></td>
			<td><%= user.location %></td>
			<td><%= user.email %></td>
			<% if current_user.admin? %>
				<td><%= link_to "edit", custom_edit_user_path(user) %></td>
			<% end %>
			<% if current_user.admin? && !current_user?(user) %>
				<td><%= link_to "delete", custom_delete_user_path(user),
						                         method: :delete,
						                         data: { confirm: "You sure?" } %>
				</td>
			<% end %>
		</tr>
		<% end %>
		</tbody>
	</table>

</div>